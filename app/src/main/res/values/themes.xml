<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:itemBackground">@color/nearby_locations_background</item>
    </style>

    <style name="Theme.RR" parent="Base.Theme.RR" />

    <!--    Theme style for Night Mode Switch-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated"> @color/night_mode</item>
        <item name="colorSwitchThumbNormal"> @color/white</item>
        <item name="android:colorForeground"> #99FFFFFF</item>
    </style>

    <!--    Theme style for Notification Switch-->
    <style name="notifiactionSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated"> @color/notification</item>
        <item name="colorSwitchThumbNormal"> @color/white</item>
        <item name="android:colorForeground"> #99FFFFFF</item>
    </style>

    <!--    Theme style for private account Switch-->
    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated"> @color/private_account</item>
        <item name="colorSwitchThumbNormal"> @color/white</item>
        <item name="android:colorForeground"> #99FFFFFF</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#E4F3FF</item>
    </style>

    <style name="mainthemes">
        <item name="android:background">@color/mainTheme</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TEXTgrey">
        <item name="android:textColor">#939393</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">#FF5757</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">


        <item name="colorControlNormal">#4D0000</item>
        <item name="colorControlActivated">@color/dialog_color_1</item>
    </style>
    
<style name="customTextMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
    <item name="android:textColor">@android:color/background_dark</item>
</style>

    <style name="MyTitleStyle">
        <item name="android:textColor">#ff5757</item> <!-- Change text color -->
        <item name="android:textSize">16sp</item> <!-- Change text size -->
        <item name="android:textStyle">bold</item> <!-- Change text style -->

    </style>



</resources>