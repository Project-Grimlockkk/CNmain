<!-- spinner_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainTheme" /> <!-- Change to your desired color -->
            <corners android:radius="18dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mainTheme" /> <!-- Change to your desired color -->
            <corners android:radius="10dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</selector>
