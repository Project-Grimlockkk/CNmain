<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#22263E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/appLogoImageView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="17dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/robot" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi,  Welcome to RoomRadar"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                android:layout_centerHorizontal="true"
                />


            </RelativeLayout>

            <TextView
                android:id="@+id/firstTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:text="We help you to find your best matched PGs"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/getStartedButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Get Started"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="#4942CE"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/spinnerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Nearby Locations"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>

                <Spinner
                    android:id="@+id/spinnerwelcome"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="TouchTargetSizeCheck"
                    android:background="@drawable/spinner_background"/>
            </LinearLayout>

            <TextView
                android:id="@+id/categoriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories : "
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_marginStart="145dp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- First row with two CardViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/white"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical">

                             <ImageView
                                 android:layout_width="140dp"
                                 android:layout_height="117dp"
                                 android:layout_gravity="center_horizontal"
                                 android:scaleType="centerCrop"
                                 android:src="@drawable/gender" />

                             <TextView
                                 android:id="@+id/genderview"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Gender"
                                 android:textColor="#6661fe"
                                 android:textSize="16sp"
                                 android:fontFamily="@font/poppins"
                                 android:layout_gravity="center"
                                 android:textStyle="bold" />
                         </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Second CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/white"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:src="@drawable/noofbeds"
                                android:layout_marginStart="10dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No. of Beds"
                                android:textColor="#6661fe"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:layout_gravity="center"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second row with two CardViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Third CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/facilities" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No. of Beds"
                                android:textColor="#6661fe"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Fourth CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:src="@drawable/tenanttype"
                                android:scaleType="centerCrop"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tenanttype"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tenant Type"
                                android:textColor="#6661fe"
                                android:fontFamily="@font/poppins"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Third row with two CardViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Fifth CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/rent" />

                            <TextView
                                android:id="@+id/rentview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rent"
                                android:textColor="#6661fe"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Sixth CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:src="@drawable/foodtype"
                                android:scaleType="centerCrop"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/foodtypeview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food Type"
                                android:textColor="#6661fe"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Seventh CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/distance" />

                            <TextView
                                android:id="@+id/distanceview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distance"
                                android:textColor="#6661fe"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Eighth CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="1dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="117dp"
                                android:src="@drawable/location"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/locationview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textColor="#6661fe"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
