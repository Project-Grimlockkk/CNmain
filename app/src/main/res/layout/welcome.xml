<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141526">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="WELCOME TO ROOMRADAR "
        android:textColor="#F9AA33"
        android:fontFamily="@font/poppins_bold"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>


        <ImageView
        android:id="@+id/appLogoImageView"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="7dp"
        android:src="@drawable/welcomepage" />

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Way to Find Your Perfect PG"
            android:textColor="#F9AA33"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/appLogoImageView"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>


        <TextView
        android:id="@+id/categoriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="#F9AA33"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="145dp"
        android:gravity="center"
        android:layout_below="@id/firstTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesTextView"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- First row with two CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="117dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/gender" />

                <TextView
                    android:id="@+id/genderview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#6661fe"
                    android:textSize="16sp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="55dp"
                    android:textStyle="bold" />


                <!-- Add content for first CardView here -->

            </androidx.cardview.widget.CardView>

            <!-- Second CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="117dp"
                    android:src="@drawable/noofbeds"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/noofbedsview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Beds"
                    android:textColor="#6661fe"
                    android:textSize="16sp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="45dp"
                    android:textStyle="bold" />


                <!-- Add content for second CardView here -->

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second row with two CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Third CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="117dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/facilities" />
                <TextView
                    android:id="@+id/facilitiesview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facilities"
                    android:textColor="#6661fe"
                    android:textSize="18sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginStart="45dp"
                    android:textStyle="bold" />


                <!-- Add content for third CardView here -->

            </androidx.cardview.widget.CardView>

            <!-- Fourth CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="117dp"
                    android:src="@drawable/tenanttype"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tenanttypeview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tenant Type"
                    android:textColor="#6661fe"
                    android:textSize="16sp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="45dp"
                    android:textStyle="bold" />



                <!-- Add content for fourth CardView here -->

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="117dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/distance" />

                <TextView
                    android:id="@+id/distanceview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="#6661fe"
                    android:textSize="16sp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="55dp"
                    android:textStyle="bold" />


                <!-- Add content for first CardView here -->

            </androidx.cardview.widget.CardView>

            <!-- Second CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="117dp"
                    android:src="@drawable/location"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/locationview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#6661fe"
                    android:textSize="16sp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="50dp"
                    android:textStyle="bold" />


                <!-- Add content for second CardView here -->

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second row with two CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Third CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="117dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rent" />
                <TextView
                    android:id="@+id/rentview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent"
                    android:textColor="#6661fe"
                    android:textSize="18sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginStart="65dp"
                    android:textStyle="bold" />


                <!-- Add content for third CardView here -->

            </androidx.cardview.widget.CardView>

            <!-- Fourth CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="117dp"
                    android:src="@drawable/foodtype"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/foodtypeview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Type"
                    android:textColor="#6661fe"
                    android:textSize="16sp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="55dp"
                    android:textStyle="bold" />



                <!-- Add content for fourth CardView here -->

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F9AA33"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"

           />





    </LinearLayout>
    </ScrollView>
</RelativeLayout>
