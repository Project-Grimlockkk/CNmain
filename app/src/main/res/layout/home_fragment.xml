<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/listingpagee"
    style="@style/SCREEN"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/your_view"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/mainTheme" />

<!--            <EditText-->
<!--                android:layout_width="280dp"-->
<!--                android:layout_marginLeft="30dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:paddingLeft="30dp"-->
<!--                android:hint=" Search location"-->
<!--                android:textColor="@color/white"-->
<!--                android:height="48dp"-->
<!--                android:textColorHint="@color/white"-->
<!--                android:background="@drawable/roundedsqr"-->
<!--                ></EditText>-->

            <androidx.appcompat.widget.SearchView
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:layout_marginTopw="16dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/search"
                app:iconifiedByDefault="false"
                app:searchHintIcon="@null"
                app:queryHint="Search..."
                android:focusable="false"
                android:background="@drawable/roundedsqr"/>

            <ImageView
                android:id="@+id/filterr"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_gravity="end|center"
                android:layout_marginRight="25dp"
                android:scaleX="1.8"
                android:scaleY="1.8"
                app:srcCompat="@drawable/filter_svgrepo_com"
                app:tint="#FFFFFF" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addingPG"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/round_back_secondary_maintheme"
            android:text="+ Add a PG"
            android:textAllCaps="false"
            android:textColor="@color/white"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
