<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#F2F2F2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="#F2F2F2"
            >

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:id="@+id/apImg">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/apName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="20dp"

                    android:text="Apartment" />

                <TextView
                    android:id="@+id/apPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="20dp"
                    android:text="2000 INR/Monthly"
                    android:textColor="#888888"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/vcImg"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleX="2"
                        android:scaleY="2"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/your_view2"
                        app:layout_constraintTop_toTopOf="@+id/your_view2"
                        app:srcCompat="@drawable/baseline_man_24"
                        app:tint="@color/card" />

                    <TextView
                        android:id="@+id/apVacancy"
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:text="4"
                        android:fontFamily="@font/poppins"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/distImg"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleX="2"
                        android:scaleY="2"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/your_view2"
                        app:layout_constraintTop_toTopOf="@+id/your_view2"
                        app:srcCompat="@drawable/distance_to_travel_between_two_points_svgrepo_com"
                        app:tint="@color/card" />


                    <TextView
                        android:id="@+id/apDistance"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="800m"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/img_room"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end|center"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>