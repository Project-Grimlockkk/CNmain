<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"> <!-- Centering the CardView -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/dialog_color_2">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:scaleX="1.8"
                android:scaleY="1.8"
                app:srcCompat="@drawable/back_svgrepo_com"
                app:tint="#FFFFFF" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/round_back_white"
                android:padding="20dp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_back" />

                <ImageView
                    android:id="@+id/ratingImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:padding="25dp"
                    android:src="@drawable/fivestar" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/rateNowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:layout_marginStart="75dp"
            android:text="Rate Us Now"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/demandsTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="270dp"
            android:gravity="center"
            android:text="Did app meet your demands?"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/demandsTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="40dp"
            android:rating="5"
            android:theme="@style/MyRatingBar" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
